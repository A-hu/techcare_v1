<h1>目前用藥/更新用藥請直接上傳檔案</h1>
<br><br><br>
<div class="center-block", style="width:35%;font-size:30px">
	<%= form_for [ @requester, @medication ], :html => {:class => 'inline'} do |m| %>
		<div>
		<%= m.file_field :picture, {:class => "btn btn-default btn-inverse", :style => "font-size: 20px"} %>
	 	<%= m.collection_select( :time_id, MedicationTime.all, :id, :name, { :class => "show-tick", :style => "font-size: 50px" } ) %>
	 	<%= m.submit "上傳處方或藥物照片", class: 'btn btn-danger'%>
	<% end %>
		</div>
</div>
<br><br><br>
<div class="container">
	<div class="col-md-12">
		<table style="border:8px #7878FF groove;" cellpadding="10" border
		='2' border-style:inset;>
			<tr>
				<th style="padding:10px 25px 10px 25px;">上傳時間</th>
				<th style="padding:10px 25px 10px 25px;">處方簽圖片</th>
				<th style="padding:10px 25px 10px 25px;">錯誤移除檔案</th>
			</tr>
			<tr>
				<% @medications.each do |medication|%>
				<% if medication.medication_time.id == 8 %>
					<th style="padding:10px 25px 10px 25px;"><%= medication.created_at.to_date %></th>
					<th style="padding:10px 25px 10px 25px;"><%= image_tag( medication.picture.url(:large) ) %></th>
					<th style="padding:10px 25px 10px 25px;"><%= link_to "移除檔案", requester_medication_path(@requester, medication), method: :delete, :class => "btn btn-default"%></th>	
				<% end %>
			</tr>
			<% end %>
		</table>
	</div>
	<div class="col-md-12 text-center">
	<table style="border:8px #FFD382 groove" cellpadding="20" border='2' border-style:inset>
		<tr>
			<th style="padding:10px 25px 10px 25px;">上傳時間</th>
			<th style="padding:10px 25px 10px 25px;">服用時間</th>
			<th style="padding:10px 25px 10px 25px;">藥物圖片</th>
			<th style="padding:10px 25px 10px 25px;">錯誤移除檔案</th>
		</tr>
		<tr>
			<% @medications.each do |medication|%>
			<% unless medication.medication_time.id == 8 %>
				<th style="padding:10px 25px 10px 25px;"><%= medication.created_at.to_date %></th>
				<th style="padding:10px 25px 10px 25px;"><%= medication.medication_time.name %></th>
				<th style="padding:10px 25px 10px 25px;"><%= image_tag( medication.picture.url(:medium) ) %></th>
			  <th style="padding:10px 25px 10px 25px;"><%= link_to "移除檔案", requester_medication_path(@requester, medication), method: :delete, :class => "btn btn-default"%></th>	
		  <% end %>
		</tr>
		<% end %>
	</table>
	</div>
		
</div>

