<h1>目前用藥/用藥紀錄</h1>
<br><br><br>
<div class="center-block", style="width:35%;font-size:30px">
	<%= form_for [ @requester, @medication ], :html => {:class => 'inline'} do |m| %>
		<div>
		<%= m.file_field :picture, {:class => "btn btn-default btn-inverse", :style => "font-size: 20px"} %>
	 	<%= m.collection_select( :time_id, MedicationTime.all, :id, :name, { :class => "show-tick", :style => "font-size: 50px" } ) %>
	 	<%= m.submit "上傳處方或藥物照片", class: 'btn btn-danger'%>
	<% end %>
		</div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if flash[:notice].present? %>
      <div class="alert alert-success" role="alert" style="text-align: center">
        <%= notice %>
      </div>
    <% end %>
    <% if flash[:alert].present? %>
      <div class="alert alert-danger" role="alert" style="text-align: center">
        <%= alert %>
      </div> 
    <% end %>  
  </div>
</div>

<br><br><br>
<div class="container">
	<div class="col-md-12 text-center">
		<table style="border:8px #60B541 groove" cellpadding="20" border='2' border-style:inset>
			<tr>
				<th style="font-size: 30px; padding:10px 25px 10px 25px;">上傳時間</th>
				<th style="font-size: 30px; padding:10px 25px 10px 25px;">服用時間</th>
				<th style="font-size: 30px; padding:10px 25px 10px 25px;">藥物圖片</th>
				<th style="font-size: 30px; padding:10px 25px 10px 25px;">移除檔案</th>
			</tr>
			<tr>
				<% @medications.each do |medication|%>
				<% unless medication.medication_time.id == 1 %>
					<th style="font-size: 30px; padding:10px 25px 10px 25px;"><%= medication.created_at.to_date %></th>
					<th style="font-size: 30px; padding:10px 25px 10px 25px;"><%= medication.medication_time.name %></th>
					<th style="padding:10px 25px 10px 25px;"><%= image_tag( medication.picture.url(:medium) ) %></th>
				  <th style="padding:10px 25px 10px 25px;"><%= link_to "上傳錯誤", requester_medication_path(@requester, medication), method: :delete, :class => "btn btn-default"%></th>	
			  <% end %>
			</tr>
			<% end %>
		</table>
	</div>

<br><br><br>

	<div class="col-md-12">
		<table style="border:8px #065CA6 groove;" cellpadding="10" border
		='2' border-style:inset;>
			<tr>
				<th style="font-size: 30px; padding:10px 25px 10px 25px;">上傳時間</th>
				<th style="font-size: 30px; padding:10px 25px 10px 25px;">處方簽圖片</th>
				<!-- <th style="padding:10px 25px 10px 25px;">錯誤移除檔案</th> -->
			</tr>
			<tr>
				<% @medications.each do |medication|%>
				<% if medication.medication_time.id == 1 %>
					<th style="font-size: 30px; padding:10px 25px 10px 25px;"><%= medication.created_at.to_date %></th>
					<th style="padding:10px 25px 10px 25px;"><%= image_tag( medication.picture.url(:large) ) %></th>
					<!-- <th style="padding:10px 25px 10px 25px;"><%= link_to "移除檔案", requester_medication_path(@requester, medication), method: :delete, :class => "btn btn-default"%></th>	 -->
				<% end %>
			</tr>
			<% end %>
		</table>
	</div>
</div>


